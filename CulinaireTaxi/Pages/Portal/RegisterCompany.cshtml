@page
@model CulinaireTaxi.Pages.RegisterCompanyModel
@{
    ViewBag.Title = "Register";
}

<h1 class="decorated-header text-center">Register</h1>
<div class="row">
    <div class="col">
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control" type="text" required />
        <span asp-validation-for="FirstName" class="d-block text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" type="text" required />
        <span asp-validation-for="LastName" class="d-block text-danger"></span>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">
        <label>Company Type:</label>
        <br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="@nameof(RegisterCompanyModel.CompanyType)" id="CompanyType-Restaurant" value="@CompanyType.RESTAURANT" checked required>
            <label class="form-check-label" for="CompanyType-Restaurant">Restaurant</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="@nameof(RegisterCompanyModel.CompanyType)" id="CompanyType-TaxiCompany" value="@CompanyType.TAXI" required>
            <label class="form-check-label" for="CompanyType-TaxiCompany">Company</label>
        </div>

        <span asp-validation-for="CompanyType" class="d-block text-danger"></span>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <label asp-for="CompanyName">Company Name:</label>
        <input asp-for="CompanyName" class="form-control" type="text" required />
        <span asp-validation-for="CompanyName" class="d-block text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="CompanyDescription">Company Description:</label>
        <input asp-for="CompanyDescription" class="form-control" type="text" required />
        <span asp-validation-for="CompanyDescription" class="d-block text-danger"></span>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="d-block text-danger"></span>

        <label asp-for="ConfirmEmail">Confirm your Email:</label>
        <input asp-for="ConfirmEmail" class="form-control" type="email" required />
        <span asp-validation-for="ConfirmEmail" class="d-block text-danger"></span>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="d-block text-danger"></span>

        <label asp-for="ConfirmPassword">Confirm your Password:</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" required />
        <span asp-validation-for="ConfirmPassword" class="d-block text-danger"></span>
    </div>
</div>
<br />
<button class="d-block btn btn-primary mx-auto">Register</button>
<hr />
<p class="text-center">Already have an account? <a href="/Portal/Login">Login here</a></p>
