@page
@model CulinaireTaxi.Pages.RegisterModel
@{
    ViewBag.Title = "Register";
}

<h1 class="text-center">Registreren</h1>
<hr />
<div class="row">
    <div class="col">
        <label asp-for="FirstName">Voornaam:</label>
        <input asp-for="FirstName" class="form-control" type="text" required />
        <span asp-validation-for="FirstName" class="d-block text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="LastName">Achternaam:</label>
        <input asp-for="LastName" class="form-control" type="text" required />
        <span asp-validation-for="LastName" class="d-block text-danger"></span>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="d-block text-danger"></span>

        <label asp-for="ConfirmEmail">Bevestig je Email:</label>
        <input asp-for="ConfirmEmail" class="form-control" type="email" required />
        <span asp-validation-for="ConfirmEmail" class="d-block text-danger"></span>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">
        <label asp-for="Password">Wachtwoord:</label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="d-block text-danger"></span>

        <label asp-for="ConfirmPassword">Bevestig je Wachtwoord:</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" required />
        <span asp-validation-for="ConfirmPassword" class="d-block text-danger"></span>
    </div>
</div>
<br />
<button class="d-block btn btn-primary mx-auto">Login</button>
<hr />
<p class="text-center">Heb je al een account? <a href="/Portal/Login">Inloggen</a></p>
