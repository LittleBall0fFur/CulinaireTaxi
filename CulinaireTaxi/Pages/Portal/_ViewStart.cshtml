@{
    if (UserAgent.IsAuthenticated)
    {
        switch (UserAgent.Account.AccountType)
        {
            case AccountType.ADMIN:
                Context.Response.Redirect("/App/Admin");
                break;

            case AccountType.CUSTOMER:
                Context.Response.Redirect("/App/Customer");
                break;

            case AccountType.RESTAURANT:
                Context.Response.Redirect("/App/Restaurant");
                break;

            case AccountType.TAXI:
                Context.Response.Redirect("/App/TaxiCompany");
                break;
        }
    }
}
