@page
@model CulinaireTaxi.Pages.LoginModel
@{
    ViewBag.Title = "Login";
}

<h1 class="text-center">Login</h1>
<hr />
<div class="form-group">
    <label asp-for="Email">Email:</label>
    <input asp-for="Email" class="form-control" type="email" required />
</div>
<div class="form-group">
    <label asp-for="Password">Wachtwoord:</label>
    <input asp-for="Password" class="form-control" type="password" required />
    <a href="">Wachtwoord vergeten?</a>
</div>
<button class="d-block btn btn-primary mx-auto">Login</button>
<hr />
<p class="text-center">Geen account? <a href="/Portal/Register">Registreren</a></p>
