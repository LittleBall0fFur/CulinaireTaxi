@page
@model CulinaireTaxi.Pages.App.AdminModel
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Pages/App/_LayoutBase.cshtml";
    
    Account user = UserAgent.Account;
}


@* MAIN CONTENT *@
<div class="container">
    <div class="row">
        @* FIRST CARD *@
        <div class="col-sm pb-3">
            <div class="card shadow bg-secondary">
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        @* THIRD CARD *@
        <div class="col-sm pb-3">
            <div class="card shadow bg-secondary">
                <div class="card-body">
                    <h5 class="card-title">Confirm new companies</h5>

                    <hr/>

                    <form method="post">
                        <div class="input-group">
                            @{
                                List<Company> c = CompanyTable.RetrieveCompaniesByIsConfirmed(false);
                                if(c.Count > 0) { 
                                    <h3 class="card-title">@c[0].Name</h3>
                                }
                            }

                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit" name="PostID" value="@AdminModel.POSTID_CONFIRM_COMPANY">Confirm</button>
                                <button class="btn btn-primary" type="submit" name="PostID" value="@AdminModel.POSTID_DECLINE_COMPANY">Decline</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>